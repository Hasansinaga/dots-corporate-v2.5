# Auto detect text files and perform LF normalization
* text=auto

# Documents
*.md text diff=markdown
*.txt text
*.pdf binary

# Graphics
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text

# Audio
*.mp3 binary
*.wav binary
*.flac binary
*.aac binary

# Video
*.mp4 binary
*.avi binary
*.mov binary
*.wmv binary
*.flv binary

# Archives
*.7z binary
*.bz2 binary
*.gz binary
*.rar binary
*.tar binary
*.zip binary

# Scripts
*.sh text eol=lf
*.bat text eol=crlf
*.cmd text eol=crlf

# Source code
*.js text
*.jsx text
*.ts text
*.tsx text
*.json text
*.xml text
*.css text
*.scss text
*.sass text
*.less text
*.html text
*.htm text

# Config files
*.yml text
*.yaml text
*.toml text
*.ini text
*.cfg text
*.conf text

# Documentation
*.rst text
*.tex text

# Exclude files from exporting
.gitattributes export-ignore
.gitignore export-ignore
.gitkeep export-ignore
